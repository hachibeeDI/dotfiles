# hook when commands registered to history
zshaddhistory() {
  local line=${1%%$'\n'}
  local cmd=${line%% *}

  [[ ${#line} -ge 5
      && ${cmd} != (l|l[sal])
      && ${cmd} != (c|cd)
      && ${cmd} != (m|man)
      && ${cmd} != (hub)
  ]]
}


