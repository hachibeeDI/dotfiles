{
    "editor.fontFamily": "'Cica', 'Ricty Diminished Discord',Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 12,

    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": false,

    "breadcrumbs.enabled": true,

    "workbench.activityBar.visible": false,
    "workbench.editor.enablePreview": false,

    "files.exclude": {
        "/.git": true,
        "/.DS_Store": true,
        "/node_modules": true,
        "/node_modules/": true
    },
    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true,
        "**/img": true,
        "**/dist": true
    },
    "files.watcherExclude": {
        "/node_modules/": true
    },

    // Vim
    "vim.useSystemClipboard":true,
    "vim.cmdLineInitialColon": true,
    "vim.hlsearch": true,
    "vim.easymotion": true,
    "vim.visualstar": true,
    "vim.useCtrlKeys": true,
    "vim.cursorStylePerMode.normal": "block",
    "vim.normalModeKeyBindings": [
        {
            "before": [";"],
            "after": [":"]
        },
    ],

    "terminal.integrated.shell.windows": "ubuntu1804.exe",
    "terminal.integrated.shellArgs.windows": ["run", "/usr/bin/bash"],
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "files.autoSave": "afterDelay",
    "window.zoomLevel": 0,
    "editor.wordWrap": "on",
}
